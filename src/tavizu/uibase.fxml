<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<BorderPane fx:controller="tavizu.Controller" fx:id="rootContainer"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox>
            <Button fx:id="pathButton" text="Choose path..."
                    onMousePressed="#setPath"/>
            <TextField fx:id="addressBar" HBox.hgrow="ALWAYS"
                       disable="true"/>
            <MenuButton text="ðŸ”§">
                <fx:define>
                    <ToggleGroup fx:id="sortDirection"/>
                    <ToggleGroup fx:id="sortKey" />
                </fx:define>
                <items>
                    <Menu text="Sort">
                        <RadioMenuItem fx:id="sortKeyLastModified" text="Last modified"
                                       toggleGroup="$sortKey"/>
                        <RadioMenuItem fx:id="sortKeyName" text="Name" selected="true"
                                       toggleGroup="$sortKey"/>
                        <RadioMenuItem fx:id="sortKeySize" text="Size" toggleGroup="$sortKey"/>
                        <SeparatorMenuItem/>
                        <RadioMenuItem fx:id="sortAscending" text="Ascending"
                                       selected="true" toggleGroup="$sortDirection"/>
                        <RadioMenuItem fx:id="sortDescending" text="Descending"
                                       toggleGroup="$sortDirection"/>
                    </Menu>
                </items>
            </MenuButton>
        </HBox>
    </top>
    <center>
        <!--<FlowPane fx:id="imageContainer"/>-->
        <!--<fx:include fx:id="thumbnailView" source="thumbnailview.fxml"/>-->
    </center>
    <bottom>
        <VBox>
            <TextField fx:id="terminalInput" onKeyPressed="#handleTerminalInput"/>
            <TextField fx:id="terminalOutput" editable="false"/>
        </VBox>
    </bottom>
    <right>
        <VBox fx:id="infoBox" visible="false">
            <Label fx:id="infoName"/>
            <Label fx:id="infoDimensions"/>
            <Label fx:id="infoSize"/>
            <Label fx:id="infoModified"/>
        </VBox>
    </right>
</BorderPane>